<% layout('layouts/boilerplate') %>
<div class="col-6 offset-3 my-5">
  <div class="card" style="width: 100%">
    <img
      class="card-img-top"
      src="/public/images/<%= campground.image %>"
      alt="Card image cap"
    />
    <div class="card-body">
      <div class="list-group">
        <h5 class="card-title list-group-item"><%= campground.title %></h5>
        <small class="text-muted list-group-item"
          ><%= campground.location %>
        </small>
        <p class="list-group-item"><strong>$</strong><%= campground.price %></p>
        <p class="list-group-item"><%= campground.description %></p>
      </div>
      <a href="/campgrounds" class="btn btn-secondary"
        >Go back to All campgrounds</a
      >
      <div class="mt-2">
        <a href="/campgrounds/<%= campground.id %>/edit" class="btn btn-primary"
          >Edit Campground</a
        >
      </div>
      <form
        action="/campgrounds/<%= campground.id %>?_method=DELETE "
        method="post"
      >
        <button class="btn btn-danger mt-2">Delete Campground</button>
      </form>
    </div>
  </div>
</div>
