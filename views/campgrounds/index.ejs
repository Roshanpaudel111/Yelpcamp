<% layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<ul>
  <% for (campground of campgrounds) { %>
  <div class="card mt-3">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= campground.image %> " alt="" class="img-fluid" />
      </div>
      <div class="col-md-8">
        <h1><%= campground.title %></h1>
        <p><%= campground.description %></p>
        <p class="text-muted"><%= campground.location %></p>
        <a
          href="/campgrounds/<%= campground.id %> "
          class="btn btn-outline-primary"
          >Details</a
        >
      </div>
    </div>
  </div>
  <% } %>
</ul>
